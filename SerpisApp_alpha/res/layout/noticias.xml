    android:numColumns="auto_fit"
    android:columnWidth="150dp"
    android:horizontalSpacing="5dp"
    android:verticalSpacing="10dp"
    android:paddingBottom="30dp"
    android:stretchMode="columnWidth" />

</LinearLayout>
