<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo_completo"
    >
    <ImageView
		    android:id="@+id/ImageView1"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:keepScreenOn="true"
		    android:src="@drawable/noticias" />
    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:padding="10dp"
    >
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/feedtitle"
	    android:textColor="#02334c" />
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:id="@+id/feeddesc"
	    android:textColor="#02334c" />
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:autoLink="web"
	    android:textColorLink="@color/turquesa"
	    android:id="@+id/feedlink" />

	<ImageView
	    android:id="@+id/imageView2"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:scaleType="fitXY"
	    android:src="@android:drawable/button_onoff_indicator_off" />

	</LinearLayout>
	<ListView
		android:id="@android:id/list"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:padding="10dp" />
	<TextView
		android:id="@android:id/empty"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:text="No hay informacion disponible" />
</LinearLayout>